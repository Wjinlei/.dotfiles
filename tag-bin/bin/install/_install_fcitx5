# Frame
pacman -S fcitx5-im fcitx5-chinese-addons

# Theme
pacman -S fcitx5-nord

# Dict
pacman -S fcitx5-pinyin-zhwiki fcitx5-pinyin-moegirl

# Variable
cat >> /etc/environment <<EOF
GTK_IM_MODULE=fcitx
QT_IM_MODULE=fcitx
XMODIFIERS=@im=fcitx
INPUT_METHOD=fcitx
SDL_IM_MODULE=fcitx
GLFW_IM_MODULE=ibus
EOF
